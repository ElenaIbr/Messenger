<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="reg_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="reg_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
    </style>

    <style name="reg_constlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:color">@color/gray</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="user_info_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="about_you">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_settings_text</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/settings_btn_top</item>
    </style>
</resources>